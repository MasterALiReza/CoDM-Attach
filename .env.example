# ============================================================================
# CODM Bot - Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NOTE: This file is automatically created by deploy.sh during installation.
# ============================================================================

# ----------------------------------------------------------------------------
# Telegram Bot Configuration (REQUIRED)
# ----------------------------------------------------------------------------

# Bot token from @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Your Telegram user ID (get it from @userinfobot)
SUPER_ADMIN_ID=YOUR_TELEGRAM_USER_ID_HERE

# ----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# ----------------------------------------------------------------------------

# PostgreSQL connection string (created by deploy.sh)
DATABASE_URL=postgresql://codm_bot_user:password@localhost:5432/codm_bot_db

# Database backend (only postgres supported)
DATABASE_BACKEND=postgres

# ----------------------------------------------------------------------------
# Connection Pool Settings
# ----------------------------------------------------------------------------

DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ----------------------------------------------------------------------------
# Language Settings
# ----------------------------------------------------------------------------

DEFAULT_LANG=fa
SUPPORTED_LANGS=fa,en
FALLBACK_LANG=en

# ----------------------------------------------------------------------------
# Performance & Caching
# ----------------------------------------------------------------------------

CACHE_ENABLED=true
CACHE_TTL_CATEGORIES=3600
CACHE_TTL_WEAPONS=1800
CACHE_TTL_ATTACHMENTS=300

# Slow query logging
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=100

# ----------------------------------------------------------------------------
# Environment
# ----------------------------------------------------------------------------

ENVIRONMENT=production
DEBUG_MODE=false

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------

DB_LOG_LEVEL=INFO
LOG_DB_QUERIES=false

# ============================================================================
# INSTALLATION NOTES:
# 
# 1. Run the deployment script:
#    sudo ./deploy.sh
#
# 2. The script will:
#    - Create database with secure random password
#    - Set up all tables and permissions
#    - Configure this .env file automatically
#    - Install the wx-attach management CLI
#
# 3. After installation, manage the bot with:
#    wx-attach         # Interactive menu
#    wx-attach start   # Start bot
#    wx-attach status  # Check status
# ============================================================================
